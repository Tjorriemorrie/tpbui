{% extends '::base.html.twig' %}


{% block title %}{{ parent() }}{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('bundles/myui/scrape.js') }}"></script>
{% endblock %}


{% block body %}
<div class="container-fluid">
	<div class="row-fluid">

		<h2>The Pirate Bay</h2>

		<ul class="nav nav-tabs">
			<li><a data-toggle="tab" href="#series">Series</a></li>
			<li><a data-toggle="tab" href="#movies">Movies</a></li>
			<li><a data-toggle="tab" href="#games">Games</a></li>
		</ul>

		<div class="tab-content">

			<div id="series" class="tab-pane fade">
				{% include 'MyUiBundle:Default:items.html.twig' with {'items': series} %}
			</div>

			<div id="movies" class="tab-pane fade">
				{% include 'MyUiBundle:Default:items.html.twig' with {'items': movies} %}
			</div>

			<div id="games" class="tab-pane fade">
				{% include 'MyUiBundle:Default:items.html.twig' with {'items': games} %}
			</div>

		</div>
	</div>

	</div>
</div>
{% endblock %}